<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform_analysis.pa.repository.UserMapper">

    <select id="getAllUserData" resultType="com.platform_analysis.pa.model.Entitiy.UserDataEntity">
        SELECT * FROM PA_TEST_USER
    </select>

    <select id="getUserDataById" resultType="com.platform_analysis.pa.model.Entitiy.UserDataEntity">
        SELECT * FROM PA_TEST_USER WHERE id = #{id}
    </select>

    <insert id="setUserData" parameterType="com.platform_analysis.pa.model.Entitiy.UserDataEntity">
        INSERT INTO PA_TEST_USER (username, email) VALUES(#{username}, #{email})
    </insert>

</mapper>